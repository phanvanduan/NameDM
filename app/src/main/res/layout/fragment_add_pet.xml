<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.mypet_fragment.AddPetFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:elevation="24dp">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center|start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm thú cưng"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/rlAddDog"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#c6000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/dog_puppy"
                android:textColor="@color/primaryTextColor"
                android:textSize="40sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".50"
                android:scaleType="centerCrop"
                android:src="@drawable/dog" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlAddCat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#c6000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/cat_kitty"
                android:textColor="@color/primaryTextColor"
                android:textSize="40sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".50"
                android:scaleType="center"
                android:src="@drawable/cat2" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlAddHamster"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#c6000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/hamster"
                android:textColor="@color/primaryTextColor"
                android:textSize="40sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".50"
                android:scaleType="center"
                android:src="@drawable/hamster" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>